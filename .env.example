# Server Configuration
NODE_ENV=production
PORT=5000
HOST=0.0.0.0

# Database Configuration
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=btcbot_db
DB_USER=btcbot
DB_PASSWORD=your_secure_password_here
DB_DIALECT=mysql

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=30d
JWT_REFRESH_SECRET=your-refresh-token-secret-key
JWT_REFRESH_EXPIRE=7d

# Admin Configuration
ADMIN_EMAIL=your-admin@email.com
ADMIN_PASSWORD=your-admin-password
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=User
SUPER_ADMIN_KEY=super-admin-secret-key-2024

# Email Configuration (Nodemailer)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=your-email@gmail.com

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png,image/gif,image/webp
UPLOAD_PATH=./uploads

# Security Configuration
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Wallet Configuration
DEPOSIT_WALLET_ADDRESS=your-crypto-wallet-address-here
DEPOSIT_QR_CODE_URL=https://api.qrserver.com/v1/create-qr-code/?size=200x200&data=

# Commission Configuration (15 Levels)
LEVEL_1_COMMISSION=5.0
LEVEL_2_COMMISSION=2.0
LEVEL_3_COMMISSION=2.0
LEVEL_4_COMMISSION=2.0
LEVEL_5_COMMISSION=2.0
LEVEL_6_COMMISSION=1.0
LEVEL_7_COMMISSION=1.0
LEVEL_8_COMMISSION=1.0
LEVEL_9_COMMISSION=1.0
LEVEL_10_COMMISSION=1.0
LEVEL_11_COMMISSION=0.5
LEVEL_12_COMMISSION=0.5
LEVEL_13_COMMISSION=0.5
LEVEL_14_COMMISSION=0.5
LEVEL_15_COMMISSION=0.5

# Bot Configuration
BOT_ACTIVATION_DELAY_HOURS=24
MINIMUM_DEPOSIT_AMOUNT=100
MAXIMUM_DEPOSIT_AMOUNT=100000

# Rank System Configuration
BRONZE_MIN_DEPOSIT=100
SILVER_MIN_DEPOSIT=1000
GOLD_MIN_DEPOSIT=5000
PLATINUM_MIN_DEPOSIT=25000
DIAMOND_MIN_DEPOSIT=100000

# Notification Configuration
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false

# Frontend URL
FRONTEND_URL=http://your-server-ip:5000
BACKEND_URL=http://your-server-ip:5000