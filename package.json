{
  "name": "btcbot24-backend",
  "version": "1.0.0",
  "description": "Backend API for BTCBOT24 Referral-Based Subscription & Deposit Platform",
  "main": "server.js",
  "scripts": {
    "dev": "nodemon server.js",
    "build": "next build",
    "build:prod": "NODE_ENV=production next build",
    "start": "node server.js",
    "start:prod": "NODE_ENV=production node server.js",
    "start:dev": "npm run setup && npm run dev",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:reload": "pm2 reload ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "deploy": "npm run build:prod && npm run pm2:start",
    "redeploy": "npm run build:prod && npm run pm2:restart",
    "test": "jest",
    "lint": "eslint . && next lint",
    "lint:fix": "eslint . --fix",
    "create-db": "node create-database.js",
    "migrate": "node migrate.js",
    "setup": "npm run create-db && npm run migrate",
    "setup:prod": "NODE_ENV=production npm run create-db && NODE_ENV=production npm run migrate",
    "setup:dev": "npm run setup && npm run dev",
    "db:migrate": "sequelize-cli db:migrate",
    "db:migrate:undo": "sequelize-cli db:migrate:undo",
    "db:seed": "sequelize-cli db:seed:all",
    "db:seed:undo": "sequelize-cli db:seed:undo:all",
    "db:create": "sequelize-cli db:create",
    "db:drop": "sequelize-cli db:drop"
  },
  "keywords": [
    "cryptocurrency",
    "trading",
    "referral",
    "subscription",
    "nodejs",
    "express",
    "mongodb"
  ],
  "author": "Anonymouse",
  "license": "MIT",
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "aos": "^2.3.4",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-slow-down": "^2.0.1",
    "express-validator": "^7.0.1",
    "framer-motion": "^12.23.22",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.545.0",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.15.2",
    "next": "15.5.4",
    "node-fetch": "^2.7.0",
    "nodemailer": "^6.10.1",
    "qrcode": "^1.5.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-intersection-observer": "^9.16.0",
    "sequelize": "^6.37.7",
    "sharp": "^0.33.0",
    "slugify": "^1.6.6",
    "swiper": "^12.0.2",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "eslint-config-node": "^4.1.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "sequelize-cli": "^6.6.3",
    "supertest": "^6.3.3",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
